{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Number of college students in each state in the U.S",
    "data": {
      "url": "https://raw.githubusercontent.com/crycryzzz/homework2/main/population.csv"
    },
    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "East South Central",
            "Oacific",
            "Mountain",
            "West Sorth Central",
            "New England",
            "South Atlantic",
            "East North Central",
            "West North Central",
            "Mid-Atantic"
          ],
          "labels":[
            "Show All",
            "East South Central",
            "Oacific",
            "Mountain",
            "West Sorth Central",
            "New England",
            "South Atlantic",
            "East North Central",
            "West North Central",
            "Mid-Atantic"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
        {
          "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        }
      ],
    "encoding": {
      "x": {
        "field": "Student Population",
        "type": "quantitative",
        "title": "StudentPupolation",
        "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [10000, 1000000]}
    },
      "y": {
        "field": "Number of universities",
        "type": "quantitative",
        "axis": {"tickCount": 6},
        "scale": {"type": "log", "domain": [1, 100]}
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Student Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [50000,100000, 200000, 300000, 400000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "East South Central",
                "Oacific",
                "Mountain",
                "West Sorth Central",
                "New England",
                "South Atlantic",
                "East North Central",
                "West North Central",
                "Mid-Atantic"
              ],
              "range": [
                "#D200D2",
                "#EA0000",
                "#8600FF",
                "#00E3E3",
                "#02F78E",
                "#F9F900",
                "#FF8000",
                "#AD5A5A",
                "#5CADAD"
              ]
            }
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.6},
            "value": 0.2
          },
          "tooltip": [
            {"field": "NAME", "type": "nominal"},
            {"field": "Student Population", "type": "quantitative", "format": ","},
            {"field": "Number of universities", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 12,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "NAME", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['NAME'] == 'Wyoming' || datum['NAME'] == 'Vermont' ",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "NAME", "type": "nominal"},
            {"field": "Student Population", "type": "quantitative", "format": ","},
            {"field": "Number of universities", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }